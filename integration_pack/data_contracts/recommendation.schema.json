{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RecommendationOut",
  "type": "object",
  "required": [
    "ui",
    "content"
  ],
  "properties": {
    "user_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "ui": {
      "type": "object",
      "required": [
        "layout",
        "components"
      ],
      "properties": {
        "layout": {
          "type": "string"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "verbosity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "tone": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "content": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "quiz": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "additionalProperties": true
    },
    "explanations": {
      "type": "object"
    }
  },
  "additionalProperties": false
}